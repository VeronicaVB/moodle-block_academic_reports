<section id="ac-reports" class="academic-reports-section">
    <div class="card-body">
        <h3 class="lead">{{#str}} pluginname, block_academic_reports {{/str}}</h3>
        <div class="container-fluid">

            <div class="row align-items-center">
                <div class="col-lg-12">
                    <dl>
                        <dd>
                            <ul class="badges">
                                <table class="table table-striped table-wrapper-scroll-y my-custom-scrollbar">
                                    <thead>
                                        <tr class="attheader">
                                            <th>{{#str}} description, block_academic_reports {{/str}}</th>
                                            <th>{{#str}} viewreport, block_academic_reports {{/str}}</th>
                                            <th>{{#str}} createddate, block_academic_reports {{/str}}</th>
                                        </tr>
                                    </thead>
                                    <tbody class="ac-rep-tbody ">
                                        {{#reports}}
                                        <tr >
                                            <td class="view-report">{{description}}</td>
                                            <td class="text-center view-report"> 
                                                <img data-tdss="{{tdocumentsseq}}" class ="file-pdf" src="{{icon}}" alt="view report">
                                            </td>
                                            <td>{{documentcreateddate}}</td>
                                        </tr>
                                        {{/reports}}
                                    </tbody>
                                </table>
                            </ul>
                        </dd>
                    </dl>
                </div>

            </div>
        </div>
        </div>
</section>
{{#js}}
require(['block_academic_reports/controls'], function(Mod) {
Mod.init();
});
{{/js}}